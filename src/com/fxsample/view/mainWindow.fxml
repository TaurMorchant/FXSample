<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="com.fxsample.view.MainWindowController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TableView fx:id="table" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="dataColumn" text="Data" prefWidth="100"/>
            <TableColumn fx:id="transformedDataColumn" text="Transformed Data" prefWidth="200"/>
        </columns>
    </TableView>

    <Button GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#newWindow" text="New Window"/>
</GridPane>